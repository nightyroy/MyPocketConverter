<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_jpy"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="com.example.agnesbrite.mypocketconverter.JPY">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/orange"
        android:scaleType="fitXY"
        android:id="@+id/orange"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:layout_marginTop="15dp"
        android:id="@+id/myrrates"
        android:background="@android:color/background_light"
        android:textSize="30sp"
        android:textAlignment="center"
        android:layout_below="@+id/myrrate"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:layout_marginTop="14dp"
        android:id="@+id/rm2"
        android:background="@android:color/background_light"
        android:textSize="30sp"
        android:textAlignment="center"
        android:layout_below="@+id/rm"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="...Enter amount in Ringgit..."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:fontFamily="cursive"
        android:textStyle="normal|bold|italic"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="54dp"
        android:id="@+id/rm"
        android:layout_below="@+id/myrrates"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sgd"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:contentDescription="SGD"
        android:id="@+id/sgd2"
        android:textSize="30sp" />

    <TextView
        android:text="...Rate equivalent to $1 SGD..."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:fontFamily="cursive"
        android:textStyle="normal|bold|italic"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="30dp"
        android:id="@+id/myrrate"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="...Amount in SGD..."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:fontFamily="cursive"
        android:textStyle="normal|bold|italic"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="54dp"
        android:id="@+id/sgd"
        android:layout_below="@+id/rm2"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Enter"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        style="@style/Widget.AppCompat.Button.Colored"
        android:background="@color/colorPrimaryDark"
        android:layout_below="@+id/sgd2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp" />

</RelativeLayout>
